{% extends 'base.html.twig' %}

{% block content %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <form class="form" method="post" enctype="multipart/form-data" action="{{ path('app_register') }}">
    {{ form_widget(registrationForm._token) }}
        <div class="form-group">
            <label for="inputEmail">Email</label>
            {{ form_widget(registrationForm.email, { 'attr': {'class': 'form-control', 'id': 'inputEmail', 'placeholder': 'Email', 'required': 'required'} }) }}
        </div>
         <div class="form-group">
            <label for="inputEmail">Profile pic</label>
            {{ form_widget(registrationForm.imgURL, { 'attr': {'class': 'form-control', 'id': 'inputEmail', 'placeholder': 'Email', 'required': 'required'} }) }}
        </div>
        <div class="form-group">
            <label for="inputPassword">Password</label>
            {{ form_widget(registrationForm.plainPassword, { 'attr': {'class': 'form-control', 'id': 'inputPassword', 'placeholder': '*******', 'required': 'required'} }) }}
        </div>

          <div class="form-group">
            <label for="inputname">first name</label>
            {{ form_widget(registrationForm.name, { 'attr': {'class': 'form-control', 'id': 'inputname', 'placeholder': 'first name', 'required': 'required'} }) }}
        </div>

          <div class="form-group">
            <label for="inpulasttname">last name</label>
            {{ form_widget(registrationForm.lastname, { 'attr': {'class': 'form-control', 'id': 'inputlastname', 'placeholder': 'last name', 'required': 'required'} }) }}
        </div>

          <div class="form-group">
            <label for="inputtel">tel</label>
            {{ form_widget(registrationForm.tel, { 'attr': {'class': 'form-control', 'id': 'inputtel', 'placeholder': 'telephone', 'required': 'required'} }) }}
        </div>


         <div class="form-group">
            <div class="form-check">
                {{ form_widget(registrationForm.agreeTerms, { 'attr': {'class': 'form-check-input', 'id': 'agreeTerms'} }) }}
                <label class="form-check-label" for="agreeTerms">I agree to the terms and conditions</label>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
        </div>
    </form>

{% endblock %}
